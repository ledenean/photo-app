<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>    
    <link rel="icon" href="/public/favicon.ico" sizes="70x70" type="image/ico">
    <link rel="stylesheet" type="text/css" href="/public/css/stylehome.css">
    <link rel="stylesheet" type="text/css" href="/public/css/form.css">
    <script defer src="/public/js/frontendjs.js"></script>
  </head>
  <body>
    <div id="container">
      {{log this}}
      {{> banner}}
      {{> nav}}
      {{#if (emptyObject messages)}}
      {{> flashmessage}}
      {{/if}}
      {{{body}}}
      {{> footer}}
    </div>

    {{#if logged}}
      <script>
        let ele = document.getElementById('logout-button');
        if(ele){
          ele.onclick = (even) => {
            fetch('/users/logout', {
              method:"POST"
            })
            .then((data)=>{
              location.replace('/');
            })
          }
        }
      </script>
    {{/if}}
  </body>
</html>
